<div class="row">
  <div class="small-8 large-8 small-centered large-centered columns">
    <div class="small-2 large-2 columns">
        <div class="add-playlist-container">
          <a href="/create_playlist" id="add-playlist" value="plus-sign">
          <i class="add-button foundicon-plus"></i>
          </a>
        </div>
    </div>
    <div class="small-9 large-9 columns playlist-name-container">
      <div class="playlist-name-container">
        <h3 class="playlist-name"><%= session[:user_handle] %>'s Playlists</h3>
      </div>
    </div>
    <div class="small-1 large-1 conlumns">&nbsp</div>
  </div>
</div>

<div class="row">
  <div class="small-6 large-6 small-centered large-centered columns">
      <% if @playlists.nil? %>
      <% else %>
      <% @playlists.each do |playlist| %>
      <div class="small-12 large-12 columns item-hover">
        <div class="small-9 large-9 columns playlist-title">
          <a class="playlist-list" href="/playlist/<%= playlist.id %>"><%= playlist.name %><a>
        </div>
        <div class="small-2 large-2 columns update-buttons">
          <div class="update-button-container">
            <a href="/playlist/<%=playlist.id%>/edit"><i class="edit-button foundicon-edit"></i></a> <a href="/playlist/<%=playlist.id%>/delete"><i class="delete-button foundicon-minus"></i></a>
          </div>
        </div>
      </div>
      <% end %>
      <% end %>
    </ul>
  </div>
</div>
