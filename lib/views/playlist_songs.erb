<div class="row">
  <div class="small-6 large-6 small-centered large-centered columns">
    <div class="row">
      <div class="small-4 large-4 columns">
        <a class="button" href="/playlist/<%= @playlist_id %>/add_song" id="add-song">Add Song</a>
      </div>
      <div class="small-8 large-8 columns">
        <h2>Playlist Name</h2>
      </div>
    </div>
  </div>
</div>


<div class="row">
  <div class="small-6 large-6 small-centered large-centered columns">
    <ul id="playlists">
      <% if @songs.nil? %>
      <% else %>
      <% @songs.each do |song| %>
      <li><a href="<%= song.url %>" target="_blank"><%= song.artist %> -
        <%= song.name %></a> <a href="/playlist/<%= song.playlist_id %>/edit_song/<%=song.id %>">Edit</a> <a href="/playlist/<%= song.playlist_id %>/delete_song/<%= song.id %>">Delete</a>
      </li>
      <% end %>
      <% end %>
    </ul>
  </div>
</div>
