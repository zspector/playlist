<div class="row">
  <div class="small-8 large-8 small-centered large-centered columns">
    <!-- <div class="row"> -->
      <div class="small-2 large-2 columns">
        <div class="add-button-container">
          <a href="/create_playlist" id="add-playlist" value="plus-sign">
          <i class="add-button foundicon-plus"></i>
          </a>
        </div>
    </div>
      <!-- <div class="small-4 large-4 columns">
        <a class="button" href="/playlist/<%= @playlist_id %>/add_song" id="add-song">Add Song</a>
      </div> -->
      <div class="small-10 large-10 columns">
        <h3 class="playlist-name"><%= @playlist.name%></h3>
      </div>
    <!-- </div> -->
  </div>
</div>


<div class="row">
  <div class="small-6 large-6 small-centered large-centered columns">
      <% if @songs.nil? %>
      <% else %>
      <% @songs.each do |song| %>
      <div class="small-12 large-12 columns">
        <div class="small-10 large-10 columns playlist-title">
        <a href="<%= song.url %>" target="_blank"><%= song.artist %> -
        <%= song.name %></a>
        </div>
        <div class="small-2 large-2 columns update-buttons">  
        <a href="/playlist/<%= song.playlist_id %>/edit_song/<%=song.id %>"><i class="edit-button foundicon-edit"></i></a> <a href="/playlist/<%= song.playlist_id %>/delete_song/<%= song.id %>"><i class="delete-button foundicon-minus"></i></a>
      </div>
    </div>
      <% end %>
      <% end %>
  </div>
</div>
